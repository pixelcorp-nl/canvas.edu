// Prisma schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Team {
  ORANGE
  PURPLE
  MINT
  TURQUOISE
}

model Pixel {
  id        Int     @default(autoincrement()) @id
  location  Int[]
  stamp     DateTime  @default(now())
  artist    User?     @relation(fields: [artistId], references: [id])
  artistId  Int?
}

model User {
  id        Int     @default(autoincrement()) @id
  name      String  @unique // prompt on startup
  team      Team?    
  pixels    Pixel[] @relation()
}
